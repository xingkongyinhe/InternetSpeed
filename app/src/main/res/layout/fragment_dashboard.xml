<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGetInstallApp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/get_install_app"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text_dashboard" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGetInstallTrafficApp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/get_install_traffic_app"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvGetInstallApp" />

    <!--获取流量-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGetTraffic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/get_traffic"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvGetInstallTrafficApp" />


</androidx.constraintlayout.widget.ConstraintLayout>